
<h4>Categories:</h4>

<% @categories.each do |category| %>
  <a href="/categories/<%= category.id %>"> <%= category.title %> </a>
  <br>
<% end %>

<br>

<% @items.each do |item| %>
  <% if item.inventory > 0 %>
    <p><%= item.title %> | <%= number_to_currency(item.price) %> | Inventory: <%= item.inventory %>
      <%= button_to 'Add to Cart', line_items_path(item_id: item) if current_user %></p>
  <% end %>
<% end %>

